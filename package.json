{
	"name": "carrinho-de-compras",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "wireit",
		"preview": "wireit",
		"test": "wireit",
		"check": "wireit",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "wireit",
		"format": "wireit"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"dependencies": [
				"lint"
			],
			"files": [
				"src/**/*",
				"tsconfig.json"
			],
			"output": [
				".svelte-kit/**"
			]
		},
		"preview": {
			"command": "vite preview --host",
			"dependencies": [
				"build"
			],
			"service": true
		},
		"format": {
			"command": "prettier --cache --plugin-search-dir . --check . --write .",
			"files": [
				"src/**/*",
				"tsconfig.json"
			]
		},
		"lint": {
			"command": "eslint .",
			"dependencies": [
				"format"
			],
			"files": [
				"src/**/*",
				"tsconfig.json"
			]
		},
		"test": {
			"command": "playwright test",
			"files": [
				"./tests/**/*.ts"
			]
		},
		"check": {
			"command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
		},
		"dev": {
			"command": "vite dev --host",
			"dependencies": [
				"format"
			],
			"service": true,
			"files": [
				"./src/**/*",
				"./.svelte-kit/tsconfig.json",
				"./tsconfig.json"
			]
		}
	},
	"devDependencies": {
		"@fontsource/roboto": "^4.5.3",
		"@playwright/test": "^1.29.0",
		"@supabase/supabase-js": "^2.2.1",
		"@sveltejs/adapter-vercel": "^1.0.0",
		"@sveltejs/kit": "1.0.0-next.589",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"autoprefixer": "^10.4.13",
		"css-declaration-sorter": "^6.3.1",
		"cssnano": "^5.1.14",
		"daisyui": "^2.45.0",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"firebase": "^9.15.0",
		"postcss": "^8.4.20",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"rxfire": "^6.0.3",
		"rxjs": "^7.8.0",
		"sass": "^1.57.0",
		"svelte": "^3.55.0",
		"svelte-check": "^2.10.2",
		"svelte-local-storage-store": "^0.3.2",
		"svelte-preprocess": "^5.0.0",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.2",
		"vite-plugin-compression": "^0.5.1",
		"vite-plugin-remove-console": "^1.3.0",
		"vitest": "^0.25.8",
		"workbox-core": "^6.5.4",
		"workbox-recipes": "^6.5.4"
	},
	"type": "module",
	"pnpm": {
		"overrides": {
			"rxfire>tslib": "2"
		}
	}
}
